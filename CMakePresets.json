{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "include": [],
    "configurePresets": [
        {
            "name": "configuration-common",
            "description": "General Configuration Settings for All Configs",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/install"
        },
        {
            "name": "configuration-common-linux",
            "description": "Linux Configuration Settings for GCC and Clang",
            "hidden": true,
            "inherits": "configuration-common",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "RESPOND_BUILD_PIC": "ON"
            }
        },
        {
            "name": "gcc-debug",
            "displayName": "Debug GCC Configuration",
            "description": "Target Linux with the GCC compiler, debug build type",
            "inherits": "configuration-common-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "RESPOND_BUILD_TESTS": "ON",
                "RESPOND_CALCULATE_COVERAGE": "ON",
                "RESPOND_BUILD_BENCH": "OFF",
                "RESPOND_BUILD_WARNINGS": "ON",
                "RESPOND_SYSTEM_INCLUDES": "OFF",
                "RESPOND_INSTALL": "OFF",
                "RESPOND_NO_EXCEPTIONS": "OFF"
            }
        },
        {
            "name": "gcc-release",
            "displayName": "Release GCC Configuration",
            "description": "Target Linux with the GCC compiler, release build type",
            "inherits": "configuration-common-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "RESPOND_BUILD_TESTS": "OFF",
                "RESPOND_CALCULATE_COVERAGE": "OFF",
                "RESPOND_BUILD_BENCH": "OFF",
                "RESPOND_BUILD_WARNINGS": "OFF",
                "RESPOND_SYSTEM_INCLUDES": "OFF",
                "RESPOND_INSTALL": "ON",
                "RESPOND_NO_EXCEPTIONS": "OFF"
            },
            "warnings": {
                "dev": false
            }
        },
        {
            "name": "gcc-release-cluster",
            "inherits": "gcc-release"
        },
        {
            "name": "gcc-debug-cluster",
            "inherits": "gcc-debug"
        }
    ],
    "buildPresets": [
        {
            "name": "build-common",
            "hidden": true,
            "jobs": 8
        },
        {
            "name": "gcc-release",
            "displayName": "Release GCC Build",
            "inherits": "build-common",
            "configurePreset": "gcc-release"
        },
        {
            "name": "gcc-install",
            "inherits": "build-common",
            "configurePreset": "gcc-release",
            "targets": [
                "install"
            ]
        },
        {
            "name": "gcc-debug",
            "displayName": "Debug GCC Build",
            "inherits": "build-common",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "gcc-debug-cluster",
            "inherits": "build-common",
            "configurePreset": "gcc-debug-cluster"
        },
        {
            "name": "gcc-release-cluster",
            "inherits": "build-common",
            "configurePreset": "gcc-release-cluster"
        }
    ],
    "testPresets": [
        {
            "name": "test-common",
            "description": "Settings for all tests",
            "hidden": true,
            "output": {
                "verbosity": "verbose",
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "gcc-debug",
            "displayName": "Debug",
            "description": "Enable output and stop on failure",
            "inherits": "test-common",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "gcc-release",
            "displayName": "Release",
            "description": "Enable output and stop on failure",
            "inherits": "test-common",
            "configurePreset": "gcc-release"
        },
        {
            "name": "gcc-debug-cluster",
            "displayName": "Debug Cluster",
            "description": "Enable output and stop on failure",
            "inherits": "test-common",
            "configurePreset": "gcc-debug-cluster"
        },
        {
            "name": "gcc-release-cluster",
            "displayName": "Release Cluster",
            "description": "Enable output and stop on failure",
            "inherits": "test-common",
            "configurePreset": "gcc-release-cluster"
        }
    ],
    "packagePresets": [
        {
            "name": "gcc-release",
            "configurePreset": "gcc-release",
            "generators": [
                "TGZ",
                "DEB"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "gcc-debug",
            "displayName": "Debug GCC Workflow",
            "description": "Developer Debugging Workflow Without Installation",
            "steps": [
                {
                    "type": "configure",
                    "name": "gcc-debug"
                },
                {
                    "type": "build",
                    "name": "gcc-debug"
                },
                {
                    "type": "test",
                    "name": "gcc-debug"
                }
            ]
        },
        {
            "name": "gcc-release",
            "description": "Release Workflow Without Testing",
            "steps": [
                {
                    "type": "configure",
                    "name": "gcc-release"
                },
                {
                    "type": "build",
                    "name": "gcc-release"
                },
                {
                    "type": "package",
                    "name": "gcc-release"
                }
            ]
        },
        {
            "name": "gcc-release-cluster",
            "description": "Release Workflow Without Testing for the BU SCC",
            "steps": [
                {
                    "type": "configure",
                    "name": "gcc-release-cluster"
                },
                {
                    "type": "build",
                    "name": "gcc-release-cluster"
                }
            ]
        }
    ]
}
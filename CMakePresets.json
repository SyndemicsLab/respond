{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "include": [],
    "configurePresets": [
        {
            "name": "shared-config",
            "description": "General Configuration Settings for All Shared Configs",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/shared",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "static-config",
            "description": "General Configuration Settings for All Static Configs",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/static",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "OFF"
            }
        },
        {
            "name": "linux-config",
            "description": "Linux Configuration Settings",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "microsoft-config",
            "description": "Windows Configuration Settings",
            "hidden": true,
            "generator": "MinGW Makefiles"
        },
        {
            "name": "debug-config",
            "description": "Debugger Configuration",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "RESPOND_BUILD_TESTS": "ON",
                "RESPOND_CALCULATE_COVERAGE": "ON"
            }
        },
        {
            "name": "release-config",
            "description": "Release Configuration",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "RESPOND_BUILD_TESTS": "OFF",
                "RESPOND_CALCULATE_COVERAGE": "OFF"
            }
        },
        {
            "name": "default-respond-config",
            "description": "Default Respond Configuration Settings",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "RESPOND_BUILD_PIC": "ON",
                "RESPOND_BUILD_BENCH": "OFF",
                "RESPOND_BUILD_WARNINGS": "ON",
                "RESPOND_SYSTEM_INCLUDES": "OFF",
                "RESPOND_INSTALL": "OFF",
                "RESPOND_NO_EXCEPTIONS": "OFF"
            }
        },
        {
            "name": "debug-linux-shared-config",
            "displayName": "Debug, Linux, Shared",
            "description": "Target a linux distro to create a debuggable shared library",
            "inherits": [
                "debug-config",
                "linux-config",
                "shared-config",
                "default-respond-config"
            ]
        },
        {
            "name": "debug-linux-static-config",
            "displayName": "Debug, Linux, Static",
            "description": "Target a linux distro to create a debuggable static library",
            "inherits": [
                "debug-config",
                "linux-config",
                "static-config",
                "default-respond-config"
            ]
        },
        {
            "name": "release-linux-shared-config",
            "displayName": "Release, Linux, Shared",
            "description": "Target a linux distro to create a release shared library",
            "inherits": [
                "release-config",
                "linux-config",
                "shared-config",
                "default-respond-config"
            ]
        },
        {
            "name": "release-linux-static-config",
            "displayName": "Release, Linux, Static",
            "description": "Target a linux distro to create a release static library",
            "inherits": [
                "release-config",
                "linux-config",
                "static-config",
                "default-respond-config"
            ]
        },
        {
            "name": "debug-microsoft-shared-config",
            "displayName": "Debug, Microsoft, Shared",
            "description": "Target a Microsoft distro to create a debuggable shared library",
            "inherits": [
                "debug-config",
                "microsoft-config",
                "shared-config",
                "default-respond-config"
            ]
        },
        {
            "name": "debug-microsoft-static-config",
            "displayName": "Debug, Microsoft, Static",
            "description": "Target a microsoft distro to create a debuggable static library",
            "inherits": [
                "debug-config",
                "microsoft-config",
                "static-config",
                "default-respond-config"
            ]
        },
        {
            "name": "release-microsoft-shared-config",
            "displayName": "Release, Microsoft, Shared",
            "description": "Target a microsoft distro to create a release shared library",
            "inherits": [
                "release-config",
                "microsoft-config",
                "shared-config",
                "default-respond-config"
            ]
        },
        {
            "name": "release-microsoft-static-config",
            "displayName": "Release, Microsoft, Static",
            "description": "Target a microsoft distro to create a release static library",
            "inherits": [
                "release-config",
                "microsoft-config",
                "static-config",
                "default-respond-config"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "default-build",
            "hidden": true,
            "jobs": 8
        },
        {
            "name": "release-linux-shared-build",
            "displayName": "Release Linux Shared Build",
            "inherits": "default-build",
            "configurePreset": "release-linux-shared-config"
        },
        {
            "name": "release-linux-static-build",
            "displayName": "Release Linux Static Build",
            "inherits": "default-build",
            "configurePreset": "release-linux-static-config"
        },
        {
            "name": "debug-linux-shared-build",
            "displayName": "Debug Linux Shared Build",
            "inherits": "default-build",
            "configurePreset": "debug-linux-shared-config"
        },
        {
            "name": "debug-linux-static-build",
            "displayName": "Debug Linux Static Build",
            "inherits": "default-build",
            "configurePreset": "debug-linux-static-config"
        },
        {
            "name": "release-microsoft-shared-build",
            "displayName": "Release Microsoft Shared Build",
            "inherits": "default-build",
            "configurePreset": "release-microsoft-shared-config"
        },
        {
            "name": "release-microsoft-static-build",
            "displayName": "Release Microsoft Static Build",
            "inherits": "default-build",
            "configurePreset": "release-microsoft-static-config"
        },
        {
            "name": "debug-microsoft-shared-build",
            "displayName": "Debug Microsoft Shared Build",
            "inherits": "default-build",
            "configurePreset": "debug-microsoft-shared-config"
        },
        {
            "name": "debug-microsoft-static-build",
            "displayName": "Debug Microsoft Static Build",
            "inherits": "default-build",
            "configurePreset": "debug-microsoft-static-config"
        }
    ],
    "testPresets": [
        {
            "name": "default-test",
            "description": "Settings for all tests",
            "hidden": true,
            "output": {
                "verbosity": "verbose",
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "debug-linux-shared-test",
            "displayName": "Test, Debug, Linux, Shared",
            "description": "Enable output and stop on failure",
            "inherits": "default-test",
            "configurePreset": "debug-linux-shared-config"
        },
        {
            "name": "debug-linux-static-test",
            "displayName": "Test, Debug, Linux, Static",
            "description": "Enable output and stop on failure",
            "inherits": "default-test",
            "configurePreset": "debug-linux-static-config"
        },
        {
            "name": "debug-microsoft-shared-test",
            "displayName": "Test, Debug, Microsoft, Shared",
            "description": "Enable output and stop on failure",
            "inherits": "default-test",
            "configurePreset": "debug-microsoft-shared-config"
        },
        {
            "name": "debug-microsoft-static-test",
            "displayName": "Test, Debug, Microsoft, Static",
            "description": "Enable output and stop on failure",
            "inherits": "default-test",
            "configurePreset": "debug-microsoft-static-config"
        }
    ],
    "packagePresets": [
        {
            "name": "default-package",
            "description": "Settings for all packages",
            "hidden": true,
            "generators": [
                "TGZ"
            ]
        },
        {
            "name": "debian-package",
            "inherits": "default-package",
            "description": "Settings building a Debian Package",
            "hidden": true,
            "generators": [
                "DEB"
            ]
        },
        {
            "name": "rpm-package",
            "inherits": "default-package",
            "description": "Settings building an RPM Package",
            "hidden": true,
            "generators": [
                "RPM"
            ]
        },
        {
            "name": "nsis-package",
            "inherits": "default-package",
            "description": "Settings building an NSIS Package",
            "hidden": true,
            "generators": [
                "NSIS"
            ]
        },
        {
            "name": "release-debian-shared-package",
            "inherits": "debian-package",
            "configurePreset": "release-linux-shared-config"
        },
        {
            "name": "release-debian-static-package",
            "inherits": "debian-package",
            "configurePreset": "release-linux-static-config"
        },
        {
            "name": "release-rpm-shared-package",
            "inherits": "rpm-package",
            "configurePreset": "release-linux-shared-config"
        },
        {
            "name": "release-rpm-static-package",
            "inherits": "rpm-package",
            "configurePreset": "release-linux-static-config"
        },
        {
            "name": "release-nsis-shared-package",
            "inherits": "nsis-package",
            "configurePreset": "release-microsoft-shared-config"
        },
        {
            "name": "release-nsis-static-package",
            "inherits": "nsis-package",
            "configurePreset": "release-microsoft-static-config"
        }
    ],
    "workflowPresets": [
        {
            "name": "test-debug-linux-shared-workflow",
            "displayName": "Test, Debug, Linux, Shared",
            "description": "Testing the debug shared library workflow.",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug-linux-shared-config"
                },
                {
                    "type": "build",
                    "name": "debug-linux-shared-build"
                },
                {
                    "type": "test",
                    "name": "debug-linux-shared-test"
                }
            ]
        },
        {
            "name": "test-debug-linux-static-workflow",
            "displayName": "Test, Debug, Linux, Static",
            "description": "Testing the debug static library workflow.",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug-linux-static-config"
                },
                {
                    "type": "build",
                    "name": "debug-linux-static-build"
                },
                {
                    "type": "test",
                    "name": "debug-linux-static-test"
                }
            ]
        },
        {
            "name": "test-debug-microsoft-shared-workflow",
            "displayName": "Test, Debug, Microsoft, Shared",
            "description": "Testing the debug shared library workflow.",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug-microsoft-shared-config"
                },
                {
                    "type": "build",
                    "name": "debug-microsoft-shared-build"
                },
                {
                    "type": "test",
                    "name": "debug-microsoft-shared-test"
                }
            ]
        },
        {
            "name": "test-debug-microsoft-static-workflow",
            "displayName": "Test, Debug, Microsoft, Static",
            "description": "Testing the debug static library workflow.",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug-microsoft-static-config"
                },
                {
                    "type": "build",
                    "name": "debug-microsoft-static-build"
                },
                {
                    "type": "test",
                    "name": "debug-microsoft-static-test"
                }
            ]
        },
        {
            "name": "package-release-debian-shared-workflow",
            "displayName": "Package, Release, Debian, Shared",
            "description": "Packaging the release shared library with debian",
            "steps": [
                {
                    "type": "configure",
                    "name": "release-linux-shared-config"
                },
                {
                    "type": "build",
                    "name": "release-linux-shared-build"
                },
                {
                    "type": "package",
                    "name": "release-debian-shared-package"
                }
            ]
        },
        {
            "name": "package-release-debian-static-workflow",
            "displayName": "Package, Release, Debian, Static",
            "description": "Packaging the release static library with debian",
            "steps": [
